extends layout

block content
  <!-- just for testing the API -->
  h1= title
  p Welcome to #{title}
  button#apiRequestButton Send API Request
    script.
      document.getElementById('apiRequestButton').addEventListener('click', async function() {
      
      // API-Endpoint-URL
      let apiUrl = '/api/classify';
      
      // example JSON-Payload
      let jsonData = {
        "model": "RandomForest",
        "TOI": {
          "start-date": "2023-08-01",
          "end-date": "2023-08-10"
        },
        "AOI": {
          "geometry": {
            "type": "Polygon",
            "coordinates": [
              [0, 0],
              [0, 10],
              [10, 10],
              [10, 0],
              [0, 0]
            ]
          }
        },
        "Training-Data": {
          "tbD": "xxx"
        }, 
        "Hyperparameter": {
          "tbD": "xxx"
        }, 
        "Resolution": {
          "tbD": "xxx"
        }
      }
      
      let result = await fetch (apiUrl, {
        method: 'POST',
        headers: {"content-type": "application/json"},
        body: JSON.stringify(jsonData),
      })
      console.log(await result.json());
      });